{% extends 'Core/layout.html.twig' %}
{% block title %} Ajout administrateur{% endblock %}
{% block content %}
    <div class="m-portlet m-portlet--tab">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
												<span class="m-portlet__head-icon m--hide">
													<i class="la la-gear"></i>
												</span>
                    <h3 class="m-portlet__head-text">
                       Enregistrer un administrateur
                    </h3>
                </div>
            </div>
        </div>
        <!--begin::Form-->
        {{ form_start(form, {'attr': {'class' : 'm-form m-form--fit m-form--label-align-right'}}) }}
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <div class="col-lg-6">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="col-lg-6">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                    {{ form_errors(form.firstname) }}
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-6">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="col-lg-6">
                    {{ form_label(form.department) }}
                    {{ form_widget(form.department) }}
                    {{ form_errors(form.department) }}
                </div>
            </div>
        </div>
        <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions">
                {{ form_widget(form.save) }}
                <button type="reset" class="btn btn-secondary">Annuler</button>
            </div>
        </div>
            {{ form_rest(form) }}
        {{ form_end(form) }}
        <!--end::Form-->
    </div>
{% endblock %}

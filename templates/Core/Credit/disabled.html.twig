{% extends 'Core/layout.html.twig' %}
{% block title %} Gestion forfaits refusés {% endblock %}
{% block content %}

    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Gestion des forfaits refusés
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer" >
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped- table-bordered table-hover table-checkable" id="categories_liste_admin">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Compte</th>
                                <th>Montant</th>
                                <th>GDC</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for demande in demandes %}
                                <tr>
                                    <td>{{ demande.createdAt|date('d-m-Y') }}</td>
                                    <td>{{ demande.user.email }}</td>
                                    <td>{{ demande.credit.montant|number_format(0, ',', ' ') }}</td>
                                    <td>{{ demande.credit.gdc }}</td>
                                    <td>{{ demande.description }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

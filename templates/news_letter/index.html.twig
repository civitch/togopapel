    <div class="modal fade" id="modal_new_template" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nouveau template</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="#" method="post" accept-charset="utf-8">
                        <div class="modal-body" style="padding: 5px;">

                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12" style="padding-bottom: 10px;">
                                    <input class="form-control" name="subject" id="libelle_template" placeholder="Titre" type="text" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <textarea id="content_template" style="resize:vertical;" class="form-control" placeholder="Contenu" rows="6" name="comment" required></textarea>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary font-weight-bold" id="btn_add_template_save"><i class="fa fa-refresh fa-spin"></i> Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal_supprimer_template" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="">Supprimer template</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Vous allez supprimer ce template</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-danger font-weight-bold" id="btn_supprimer_template_confirm"><i class="fa fa-refresh fa-spin"></i> Supprimer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal_envoyer" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id=""></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <select name="" id="typeOfReceiver" class="form-control">
                            <option value="1" >Tout le monde</option>
                            <option value="2" >Professionnelles</option>
                            <option value="3" >Particuliers</option>
                            <option value="4" >Une personne</option>
                        </select>
                    </div>
                    <div class="form-group d-none" id="blocinputUser" style="height: 100px;" >
                            <ul class="list-group" style="margin: 0;padding: 0;height: 100px;">
                                <input class="form-control" id="inputUser"  type="text" placeholder="Rechercher..">
                                <div id="listOfUser">
                                </div>
                            </ul>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary font-weight-bold" id="btn_envoyer_confirm"> Envoyer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal_loading" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-primary" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary font-weight-bold" id="btn_envoyer_confirm"><i class="fa fa-refresh fa-spin"></i> Envoyer</button>
                </div>
            </div>
        </div>
    </div>


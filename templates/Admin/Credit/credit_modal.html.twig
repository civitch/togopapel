<div class="modal fade" id="creditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        {{ form_start(form) }}
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ajout de forfait</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="form-group">
                        {{ form_label(form.description, 'Description: *') }}
                        {{ form_widget(form.description, {"attr" : {"placeholder" : 'Veuillez saisir une description explicative'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="form-group">
                        <div class="form-group picture_gdo_upload_pack">
                            <span class="rmv_file_pack"></span>
                            <div class="sdh_iblk_img_pack">
                                <img src="" alt="Image preview" id="img_preview_fil_pack"/>
                            </div>
                            {{ form_widget(form.pictureFile) }}
                            {{ form_errors(form.pictureFile) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.card) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Fermer</button>
                {{ form_widget(form.save, {"label" : "Envoyer"}) }}
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>
